<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>Trade</title>
        <link rel="stylesheet" href="/styles.css" />
    </head>
    <body>
        <h1>Trade</h1>
        <p><strong>Cash:</strong> $<%= cash.toFixed(2) %></p>

        <% if (message) { %>
        <p class="message"><%= message %></p>
        <% } %>

        <form action="/trade/processTrade" method="post">
        <fieldset>
            <p>
            <strong>Action:</strong>
            <select name="action">
                <option value="buy">BUY</option>
                <option value="sell">SELL</option>
            </select>
            </p>

            <p><strong>Ticker:</strong> <input type="text" name="ticker" /></p>
            <p><strong>Quantity:</strong> <input type="text" name="quantity" /></p>
        </fieldset>

        <p>
            <input type="reset" value="Reset" />
            <input type="submit" value="Execute Trade" />
        </p>
        </form>

        <hr />
        <p><a href="/">HOME</a> | <a href="/dashboard">DASHBOARD</a></p>
    </body>
</html>

<script>
  window.onsubmit = function () {
    return window.confirm("Execute this trade? This will update MongoDB.");
  };
</script>